- var manifest_url = environment == "production" ? root_url[environment]+'manifest.appcache' : ''
doctype html
html(lang="en" manifest="#{manifest_url}" xmlns="http://www.w3.org/1999/xhtml" xmlns:og="http://ogp.me/ns#")
  head
    != partial("_shared/head")
  body
    != partial("_shared/header")
    main.container.vertical-centralization(role="main")
      .row
        .col-xs-12.col-sm-9
          != yield
          if (created_at && tags)
            p.text-right Publicado em <strong>#{created_at}</strong>
              <br>Tags: #{tags.toString().replace(',', ', ')}
    script(src="#{root_url[environment]}js/main.js" async defer)
    if environment == "production"
      != partial("_shared/google_analytics")
