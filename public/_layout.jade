- var manifest_url = environment == "production" ? '/manifest.appcache' : ''
doctype html
html(lang="en" manifest="#{manifest_url}" xmlns="http://www.w3.org/1999/xhtml" xmlns:og="http://ogp.me/ns#")
  head
    != partial("_shared/head")
  body
    != partial("_shared/header")
    main.container.vertical-centralization(role="main")
      .row
        if type
          article.col-xs-12.col-sm-9(class="#{type}")
            h1 #{title}
            if type === "post"
              p Publicação: <strong><time datetime="#{created_at}" pubdate>#{created_at}</time></strong> | Tags: <strong>#{tags.toString().replace(',', ', ')}</strong>
            != yield
        else
          != yield
    != partial("_shared/footer")
    script(src="/js/scrollreveal.min.js")
    script(src="/js/main.js")
    if environment == "production"
      != partial("_shared/google_analytics")
